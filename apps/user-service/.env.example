# app settings
PORT=3001

# microservices settings
SERVICE_HOST=localhost
USER_SERVICE_PORT=4001
ROOM_SERVICE_PORT=4002

# database settings
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=root
DB_DATABASE=first_database

# typeorm settings
