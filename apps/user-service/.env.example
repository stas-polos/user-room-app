# settings for rabbitmq
RABBIT_MQ_URI=amqp://localhost:5672
RABBIT_MQ_ROOMS_QUEUE=room-service
RABBIT_MQ_AUTH_QUEUE=auth
RABBIT_MQ_USERS_QUEUE=user-service